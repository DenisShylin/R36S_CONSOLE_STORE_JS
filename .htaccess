# Установка правильных MIME-типов
<IfModule mod_mime.c>
  AddType text/css .css
  AddType application/javascript .js
  AddType application/json .map
</IfModule>

# Принудительная установка Content-Type для JS/CSS файлов
<FilesMatch "\.(js)$">
  ForceType application/javascript
</FilesMatch>
<FilesMatch "\.(css)$">
  ForceType text/css
</FilesMatch>

# SPA перенаправления
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Если это реальный файл или директория - отдаем их
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Языковые пути перенаправляем на соответствующие index.html
  RewriteRule ^(ru|ar|be|de|es|fr|it|ja|ko|nl|pt|tr|uk)(/.*)?$ /$1/index.html [L]
  
  # Всё остальное перенаправляем на корневой index.html
  RewriteRule ^ index.html [L]
</IfModule>